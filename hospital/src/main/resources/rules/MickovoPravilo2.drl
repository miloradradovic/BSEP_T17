package rules;
import bsep.hospital.model.Patient;
import bsep.hospital.model.PatientStatus;
import java.util.List;

rule "MickovoPravilo2"
        agenda-group "doctor-rules"
        no-loop true
    when
        $p: Patient($patId: id, id == 1, $bt: bloodType, $bt.toString() == "A_NEGATIVE");
        $ps: PatientStatus($pat: patient, $pat.id == $patId, $t:type, $t.toString() == "A_NEGATIVE", $val: getValue(), $val <= 10.0 );
    then
       modify( $ps ){
           setAlarm(true)
       }
end


