template header
ruleName
levelInput
messageInput

package rules;

import bsep.hospital.logging.LogModel;
import java.util.List;

template "admin-template-all"


rule "@{ruleName}"
        no-loop true
        agenda-group "admin-rules"
    when
        $lm: LogModel($l: level.toString() == "@{levelInput}", $m: message contains "@{messageInput}");
    then
       modify( $lm ){
           setAlarm(true)
       }
end

end template